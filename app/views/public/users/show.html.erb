<div class="row">
  <div class="col-sm-3">
    <i class="fas fa-address-card fa-2x"></i> Profile image
  </div>
  <div class="col-sm-5">
    <%= image_tag @user.get_profile_image(200,200) %>
  </div>
  <div class="col-sm-4">
    <% if @user == current_user %>
      <%= link_to new_public_cosplay_image_path, class: "btn btn-outline-success" do %>
        <i class="fas fa-camera"></i> New cosplay image
      <% end %>
      <%= link_to edit_public_user_path(@user), class: "btn btn-outline-info" do %>
        <i class="fas fa-user-edit"></i> Edit
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-3">
    <i class="fas fa-user fa-2x"></i>Name
  </div>
  <div class="col-sm-6">
    <h3><%= @user.name %></h3>
  </div>
  <div class="col-sm-3"></div>
</div>
<div class="row">
  <div class="col-sm-3">
    <i class="fas fa-camera fa-2x"></i>Cosplay images
  </div>
  <div class="col-sm-9"></div>
</div>

<tbody>
    <% @cosplay_images.each do |cosplay_image| %>
      <tr>
        <td>
          <%= link_to public_cosplay_image_path(cosplay_image) do %>
            <%= image_tag cosplay_image.get_image(100,100) %>
          <% end %>
        </td>
        <td>
          <%= cosplay_image.character %>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>