<div class="row">
  <%= form_with model: @cosplay_image, url: public_cosplay_images_path, local:true do |f| %>
    <div class="col-sm-3">
      <%= f.label :title %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="col-sm-5"></div>

    <div class="col-sm-3">
      <%= f.label :character %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :character, class: "form-control" %>
    </div>
    <div class="col-sm-5"></div>

    <div class="col-sm-3">
      <%= f.label :image %>
    </div>
    <div class="col-sm-6">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="col-sm-3"></div>

    <div class="col-sm-3">
      <%= f.label :body %>
    </div>
    <div class="col-sm-6">
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="col-sm-3"></div>

    <div class="col-sm-3">
      <%= f.submit class: "btn btn-outline-success" %>
    </div>
  <% end %>


</div>