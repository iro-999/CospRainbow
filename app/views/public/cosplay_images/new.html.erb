<div class="row">
  <div class="col-sm-8">
	  <h2><i class="fas fa-camera"></i>New cosplay image</h2>
  </div>
  <div class="col-sm-4"></div>
</div>
  <%= form_with model: @cosplay_image, url: public_cosplay_images_path, local:true do |f| %>
  <div class="row">
    <div class="col-sm-3">
      <%= f.label :title %>
    </div>
    <div class="col-sm-4">
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="col-sm-5"></div>
  </div>
  <div class="row">
    <div class="col-sm-3 my-3">
      <%= f.label :character %>
    </div>
    <div class="col-sm-4 my-3">
      <%= f.text_field :character, class: "form-control" %>
    </div>
    <div class="col-sm-5"></div>
  </div>
  <div class="row">
    <div class="col-sm-3">
      <%= f.label :image %>
    </div>
    <div class="col-sm-6">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="row">
    <div class="col-sm-3 my-3">
      <%= f.label :body %>
    </div>
    <div class="col-sm-6 my-3">
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="col-sm-3"></div>
  </div>
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
      <%= f.submit "Save changes", class: "btn btn-outline-success" %>
    </div>
    <div class="col-sm-6"></div>
  </div>
  <% end %>


