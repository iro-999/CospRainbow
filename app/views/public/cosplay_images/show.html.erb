      <% end %>
    </tr>
  </table>
  <div>
  <table>
    <tr>
      <td><% @book.book_comments.each do |book_comment| %>
        <%= link_to(book_comment.user) do %>
        <%= image_tag book_comment.user.get_profile_image(100,100) %><br>
        <%= book_comment.user.name %>
        <% end %></td>
        <p><td><%= book_comment.comment %></td>
        <% if book_comment.user == current_user %>
          <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger destroy_book_#{@book.id}" %></td></p>
        <% end %>
      <% end %>
    </tr>
  </table>
  </div>
  <div>
    <%= form_with model: [@book, @book_comment] do |f| %>
      <%= f.text_area :comment, rows: '5' %>
      <%= f.submit "送信" %>

    <% end %>
